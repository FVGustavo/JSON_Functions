#include "json.h"

int json_check_str(const char *json)
{
  char st_len = strlen(json);
  const char *position = json + 1;
  char *test_colon;

  if (st_len < 2 || json[0] != '{' || json[st_len - 1] != '}')
  {
    return -1;
  }

  if (st_len == 2)
  {
    return 0;
  }

  test_colon = strchr(json, ':');

  if (st_len > 2)
  {
    if (*position != '"' || json[st_len - 1] != '"')
    {
      return -1;
    }
    else
    {
      position++;
      for (position; position < st_len - 1; position++)
      {
        if (test_colon != NULL)
        {
          if ((*test_colon - 1) != '"' || (*test_colon + 1) != '"')
          {
            return -1;
          }
        }
        if (*position != '"')
        {
          return -1;
        }
        if (*position == '"')
        {
          return 0;
        }
      }
      return 0;
    }

    return 0;
  }
}

int json_get_str(const char *json, const char *key, char *data, size_t *len)
{
  int json_check = json_check_str(json);
  char json_test[64] = json;
  char *colon_check;
  colon_check = strchr(json_test, ':');

  if (json_check != 0)
  {
    return -1;
  }

  else
  {
    if (len == NULL)
    {
      return -1;
    }

    if (colon_check == NULL)
    {
      len = sizeof(key);
    }

    else
    {
      *len = *key;
      len = sizeof(key);
    }
  }

  return 0;
}

